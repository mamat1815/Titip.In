        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB-5QWpMgAcw2lD48doNsSB0u1SIjb5FmY" />

        <activity
            android:name=".ui.session.SessionActivity"
            android:exported="false"
            android:label="@string/title_activity_session"
            android:theme="@style/Theme.TitipIn" />
        <activity
            android:name=".ui.circle.CircleDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_circle_detail"
            android:theme="@style/Theme.TitipIn" />
        <activity
            android:name=".ui.circle.CircleActivity"
            android:exported="false"
            android:label="@string/title_activity_circle"
            android:theme="@style/Theme.TitipIn" />
